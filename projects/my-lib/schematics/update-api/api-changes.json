{
  "components": [
    {
      "description": "Rename input property 'oldInput' to 'newInput' and selector 'app-old' to 'app-new'",
      "filePatterns": ["**/*.component.ts", "**/*.component.html"],
      "replacements": [
        { "from": "oldInput", "to": "newInput", "regex": false },
        { "from": "app-old", "to": "app-new", "regex": false }
      ]
    }
  ],
  "directives": [
    {
      "description": "Update directive name occurrences",
      "filePatterns": ["**/*.directive.ts", "**/*.component.ts", "**/*.component.html"],
      "replacements": [
        { "from": "oldDirective", "to": "newDirective", "regex": false }
      ]
    }
  ],
  "services": [
    {
      "description": "Rename service method 'oldMethod' to 'newMethod'",
      "filePatterns": ["**/*.service.ts"],
      "replacements": [
        { "from": "oldMethod\\(", "to": "newMethod(", "regex": true }
      ]
    }
  ],
  "pipes": [
    {
      "description": "Update pipe transform signature usages",
      "filePatterns": ["**/*.pipe.ts", "**/*.component.ts", "**/*.component.html"],
      "replacements": [
        { "from": "| oldPipe", "to": "| newPipe", "regex": false }
      ]
    }
  ],
  "modules": [
    {
      "description": "Replace Module import names",
      "filePatterns": ["**/*.module.ts"],
      "replacements": [
        { "from": "OldSharedModule", "to": "NewSharedModule", "regex": false }
      ]
    }
  ],
  "models": [
    {
      "description": "Update model/interface names or properties",
      "filePatterns": ["**/*.model.ts", "**/*.interface.ts", "**/*.ts"],
      "replacements": [
        { "from": "OldModelName", "to": "NewModelName", "regex": false }
      ]
    }
  ],
  "other": [
    {
      "description": "Resolvers and interceptors",
      "filePatterns": ["**/*resolver*.ts", "**/*interceptor*.ts"],
      "replacements": [
        { "from": "resolveOld(\\", "to": "resolveNew(", "regex": true }
      ]
    }
  ]
}
