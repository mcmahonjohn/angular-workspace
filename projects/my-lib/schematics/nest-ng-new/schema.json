{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "NestNgNewOptions",
  "title": "NestJS New Project Options",
  "type": "object",
  "properties": {
    "dryRun": {
      "type": "boolean",
      "description": "Run schematic in dry-run mode (no files written to disk)",
      "default": true
    },
    "name": {
      "type": "string",
      "description": "The name of the new NestJS project"
    },
    "version": {
      "type": "string",
      "description": "Nest CLI version to use",
      "default": "latest"
    },
    "strict": {
      "type": "boolean",
      "description": "Enable strict mode",
      "default": true
    },
    "skipGit": {
      "type": "boolean",
      "description": "Skip git repository initialization",
      "default": true
    },
    "packageManager": {
      "type": "string",
      "description": "Package manager to use",
      "enum": ["npm"],
      "default": "npm"
    },
    "language": {
      "type": "string",
      "description": "Programming language",
      "enum": ["typescript"],
      "default": "typescript"
    }
  },
  "required": ["name"]
}
