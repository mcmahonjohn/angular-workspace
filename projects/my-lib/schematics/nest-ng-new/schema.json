{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "NestNgNewOptions",
  "title": "NestJS New Project Options",
  "type": "object",
  "properties": {
    "dryRun": {
      "type": "boolean",
      "description": "Run schematic in dry-run mode (no files written to disk)",
      "default": true
    },
    "schematicCollections": {
      "type": "array",
      "description": "Additional schematic collections to register with the Nest CLI.",
      "items": {
        "type": "string",
        "enum": ["@nestjs/swagger", "@nestjs/terminus", "@nestjsx/crud", "@nestjs/schematics"]
      },
      "default": ["@nestjs/swagger", "@nestjs/terminus", "@nestjsx/crud", "@nestjs/schematics"]
    },
    "name": {
      "type": "string",
      "description": "The name of the new NestJS project"
    },
    "directory": {
      "description": "The directory name to create the workspace in.",
      "type": "string"
    },
    "version": {
      "type": "string",
      "description": "Nest CLI version to use",
      "default": "latest"
    },
    "strict": {
      "type": "boolean",
      "description": "Enable strict mode",
      "default": true
    },
    "skipGit": {
      "type": "boolean",
      "description": "Skip git repository initialization",
      "default": true
    },
    "packageManager": {
      "type": "string",
      "description": "Package manager to use",
      "enum": ["npm"],
      "default": "npm"
    },
    "language": {
      "type": "string",
      "description": "Programming language",
      "enum": ["typescript"],
      "default": "typescript"
    },
    "docker": {
      "type": "boolean",
      "default": false,
      "description": "Create Dockerfile and dev.Dockerfile for the NestJS app?",
      "x-prompt": "Will this application need to be containerized? If so, this schematic can create the Dockerfile."
    }
  },
  "required": ["name"]
}
